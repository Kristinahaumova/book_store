<Page x:Class="Book_store.Pages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Book_store.Elements"
      Height="450" Width="800"
      MinHeight="450" MinWidth="800"
      Title="Корзина" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F0F8FF" Offset="0"/>
                    <GradientStop Color="#E6F3FF" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Border Grid.ColumnSpan="3" Grid.Row="0" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="0,0,0,1" 
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                           Text="Корзина" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50"/>
                <Button Grid.Column="1" 
                        Content="Продолжить покупки" 
                        Click="Back" 
                        Width="150" 
                        Height="40"
                        Background="#95A5A6" 
                        Foreground="White" 
                        BorderThickness="0" 
                        FontSize="14" 
                        FontWeight="Bold" 
                        Cursor="Hand"
                        HorizontalAlignment="Right">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <ScrollViewer Grid.ColumnSpan="3" Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled" 
                      Margin="20">
            <ItemsControl ItemsSource="{Binding CartItems}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:OrderItem DataContext="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.ColumnSpan="3" Grid.Row="2" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1,1,1,0" 
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                           Text="{Binding TotalCartSum, StringFormat='Итого: {0} руб.'}" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#27AE60" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
                <Button Grid.Column="1" 
                        Content="Оформить заказ" 
                        Click="Order" 
                        Width="150" 
                        Height="45"
                        Background="#27AE60" 
                        Foreground="White" 
                        BorderThickness="0" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        Cursor="Hand"
                        HorizontalAlignment="Right"
                        Margin="20,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
