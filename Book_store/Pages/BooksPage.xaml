<Page x:Class="Book_store.Pages.BooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Book_store.Pages"
      Height="450" Width="800"
      MinHeight="450" MinWidth="800"
      Title="Управление книгами" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Фон для всей страницы (градиент) -->
        <Rectangle Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F0F8FF" Offset="0"/>
                    <GradientStop Color="#E6F3FF" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Верхняя панель -->
        <Border Grid.ColumnSpan="3" Grid.Row="0" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="0,0,0,1" 
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                           Text="Управление книгами" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50"/>
                <Button Grid.Column="1" 
                        Content="Добавить книгу" 
                        Click="AddBook"
                        Width="130" 
                        Height="40"
                        Background="#27AE60" 
                        Foreground="White" 
                        BorderThickness="0" 
                        FontSize="14" 
                        FontWeight="Bold" 
                        Cursor="Hand"
                        HorizontalAlignment="Right">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <ScrollViewer Grid.ColumnSpan="3" Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled" 
                      Margin="20">
            <DataGrid ItemsSource="{Binding Books}" 
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      IsReadOnly="True" 
                      GridLinesVisibility="Horizontal" 
                      HeadersVisibility="Column" 
                      Background="White" 
                      BorderBrush="#CCCCCC" 
                      BorderThickness="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Автор" Binding="{Binding AuthorName}" Width="150"/>
                    <DataGridTextColumn Header="Регион" Binding="{Binding BookRegion}" Width="100"/>
                    <DataGridTextColumn Header="Жанр" Binding="{Binding BookGenre}" Width="100"/>
                    <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="80"/>
                    <DataGridTemplateColumn Header="Действия" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Редактировать" 
                                            Click="Edit"
                                            Width="80" 
                                            Height="25"
                                            Background="#3498DB" 
                                            Foreground="White" 
                                            BorderThickness="0" 
                                            FontSize="10" 
                                            Margin="2"/>
                                    <Button Content="Удалить" 
                                            Click="Delete"
                                            Width="60" 
                                            Height="25"
                                            Background="#E74C3C" 
                                            Foreground="White" 
                                            BorderThickness="0" 
                                            FontSize="10" 
                                            Margin="2"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <Border Grid.ColumnSpan="3" Grid.Row="2" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1,1,1,0" 
                Padding="20">
            <Button Content="Назад в меню" 
                    Click="Back" 
                    Width="120" 
                    Height="40"
                    Background="#95A5A6" 
                    Foreground="White" 
                    BorderThickness="0" 
                    FontSize="14" 
                    FontWeight="Bold" 
                    Cursor="Hand"
                    HorizontalAlignment="Right">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Border>
    </Grid>
</Page>
