<Page x:Class="Book_store.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Book_store.Pages"
      Height="450" Width="800"
      MinHeight="450" MinWidth="800"
      Title="Регистрация" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F0F8FF" Offset="0"/>
                    <GradientStop Color="#E6F3FF" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Border Grid.Column="1" Grid.Row="1" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="10" 
                Padding="40" 
                Margin="10"
                MaxWidth="350">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Регистрация аккаунта" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20" 
                           Foreground="#2C3E50"/>

                <Label Grid.Row="1" 
                       Content="Логин:" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5" 
                       Foreground="#34495E"/>
                <TextBox Grid.Row="2" 
                         x:Name="txtLogin" 
                         Text=""
                         FontSize="14" 
                         Padding="12,10" 
                         Margin="0,0,0,10" 
                         BorderBrush="#BDC3C7" 
                         BorderThickness="1" 
                         VerticalContentAlignment="Center"/>

                <Label Grid.Row="3" 
                       Content="Пароль:" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5" 
                       Foreground="#34495E"/>
                <PasswordBox Grid.Row="4" 
                             x:Name="pwdPassword" 
                             FontSize="14" 
                             Padding="12,10" 
                             Margin="0,0,0,10" 
                             BorderBrush="#BDC3C7" 
                             BorderThickness="1" 
                             VerticalContentAlignment="Center"/>

                <Label Grid.Row="5" 
                       Content="Подтвердить пароль:" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5" 
                       Foreground="#34495E"/>
                <PasswordBox Grid.Row="6" 
                             x:Name="pwdConfirmPassword" 
                             FontSize="14" 
                             Padding="12,10" 
                             Margin="0,0,0,10" 
                             BorderBrush="#BDC3C7" 
                             BorderThickness="1" 
                             VerticalContentAlignment="Center"/>

                <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnRegister" 
                            Content="Зарегистрироваться" 
                            Click="Register"
                            Width="150" 
                            Height="45" 
                            Margin="0,0,15,0"
                            Background="#27AE60" 
                            Foreground="White" 
                            BorderThickness="0" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#229954"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="btnBack" 
                            Content="Авторизация" 
                            Click="Login"
                            Width="100" 
                            Height="45"
                            Background="#3498DB" 
                            Foreground="White" 
                            BorderThickness="0" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#7F8C8D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
