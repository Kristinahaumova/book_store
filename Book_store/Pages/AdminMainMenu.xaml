<Page x:Class="Book_store.Pages.AdminMainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Book_store.Pages"
      MinHeight="450" MinWidth="800"
      Title="Админ-панель" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F0F8FF" Offset="0"/>
                    <GradientStop Color="#E6F3FF" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Border Grid.ColumnSpan="3" Grid.Row="0" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="0,0,0,1" 
                Padding="20">
            <TextBlock Text="Админ-панель" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"/>
        </Border>

        <Border Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="10" 
                Padding="40" 
                Margin="20">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel HorizontalAlignment="Center">
                <Button Content="Управление пользователями" 
                        Click="goToUsers" 
                        Width="250" 
                        Height="60"
                        Background="#3498DB" 
                        Foreground="White" 
                        BorderThickness="0" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        Cursor="Hand"
                        Margin="0,0,0,20">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Управление заказами" 
                        Click="goToOrders" 
                        Width="250" 
                        Height="60"
                        Background="#3498DB" 
                        Foreground="White" 
                        BorderThickness="0" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        Cursor="Hand"
                        Margin="0,0,0,20">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="Управление книгами" 
                        Click="goToBooks" 
                        Width="250" 
                        Height="60"
                        Background="#3498DB" 
                        Foreground="White" 
                        BorderThickness="0" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <Border Grid.ColumnSpan="3" Grid.Row="2" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1,1,1,0" 
                Height="20"/>
    </Grid>
</Page>
