<Page x:Class="Book_store.Pages.AboutBook"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Book_store.Pages"
      Height="450" Width="800"
      MinHeight="450" MinWidth="800"
      Title="О книге" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F0F8FF" Offset="0"/>
                    <GradientStop Color="#E6F3FF" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Border Grid.ColumnSpan="3" Grid.Row="0" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="0,0,0,1" 
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" 
                        Content="Назад" 
                        Click="Back"
                        Width="100" 
                        Height="40"
                        Background="#95A5A6" 
                        Foreground="White" 
                        BorderThickness="0" 
                        FontSize="14" 
                        FontWeight="Bold" 
                        Cursor="Hand"
                        HorizontalAlignment="Right">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <ScrollViewer Grid.ColumnSpan="3" Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled" 
                      Margin="20">
            <Border Background="White" 
                    BorderBrush="#CCCCCC" 
                    BorderThickness="1" 
                    CornerRadius="10" 
                    Padding="30">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="{Binding Name, StringFormat='О книге {0}'}" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <Grid Grid.Row="1" Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="Автор:" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#34495E" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding AuthorName}" 
                                       FontSize="16" 
                                       Foreground="#2C3E50" 
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="Регион:" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#34495E" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding BookRegion}" 
                                       FontSize="16" 
                                       Foreground="#2C3E50" 
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="Жанр:" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#34495E" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding BookGenre}" 
                                       FontSize="16" 
                                       Foreground="#2C3E50" 
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="2" Background="#F8F9FA" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Padding="20" 
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Описание:" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#34495E" 
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding Description}" 
                                       FontSize="14" 
                                       Foreground="#34495E" 
                                       TextWrapping="Wrap" 
                                       LineHeight="22"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Grid.Row="3" 
                               Text="{Binding Price, StringFormat='Цена: {0} руб.'}" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="#27AE60" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                </Grid>
            </Border>
        </ScrollViewer>

        <Border Grid.ColumnSpan="3" Grid.Row="2" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1,1,1,0" 
                Padding="20">
            <Button Content="Добавить в корзину" 
                    Click="addToCart"
                    Width="200" 
                    Height="45"
                    Background="#27AE60" 
                    Foreground="White" 
                    BorderThickness="0" 
                    FontSize="16" 
                    FontWeight="Bold" 
                    Cursor="Hand"
                    HorizontalAlignment="Center">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Border>
    </Grid>
</Page>
