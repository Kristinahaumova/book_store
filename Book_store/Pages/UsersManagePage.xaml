<Page x:Class="Book_store.Pages.UsersManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Book_store.Pages"
      MinHeight="450" MinWidth="800"
      Title="UsersManagePage" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F0F8FF" Offset="0"/>
                    <GradientStop Color="#E6F3FF" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Border Grid.Column="1" Grid.Row="1" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="10" 
                Padding="40" 
                Margin="20"
                MaxWidth="500">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="2" 
                       Content="Логин:" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5" 
                       Foreground="#34495E"/>
                <TextBox Grid.Row="3"
                         x:Name="loginTxtBox"
                         Text="{Binding Login, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         FontSize="14" 
                         Padding="12,10" 
                         Margin="0,0,0,20" 
                         BorderBrush="#BDC3C7" 
                         BorderThickness="1" 
                         VerticalContentAlignment="Center"/>

                <Label Grid.Row="4" 
                       Content="Пароль:" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5" 
                       Foreground="#34495E"/>
                <PasswordBox Grid.Row="5" 
                             x:Name="passwordPwdBox"
                             Password=""
                             FontSize="14" 
                             Padding="12,10" 
                             Margin="0,0,0,20" 
                             BorderBrush="#BDC3C7" 
                             BorderThickness="1"
                             VerticalContentAlignment="Center"/>
                
                <Label Grid.Row="6" 
                       Content="Роль:" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5" 
                       Foreground="#34495E"/>
                <CheckBox Grid.Row="7" 
                          IsChecked="{Binding Role, Mode=TwoWay}"
                          Content="Администратор" 
                          FontSize="14" 
                          Margin="0,0,0,30" 
                          VerticalAlignment="Center"/>

                <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Сохранить" 
                            Click="Save"
                            Width="120" 
                            Height="45" 
                            Margin="0,0,15,0"
                            Background="#27AE60" 
                            Foreground="White" 
                            BorderThickness="0" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#229954"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Отмена" 
                            Click="Back"
                            Width="120" 
                            Height="45"
                            Background="#95A5A6" 
                            Foreground="White" 
                            BorderThickness="0" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#7F8C8D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
