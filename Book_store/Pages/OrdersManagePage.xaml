<Page x:Class="Book_store.Pages.OrdersManagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Book_store.Pages"
      Height="450" Width="800"
      MinHeight="450" MinWidth="800"
      Title="OrdersManagePage" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.ColumnSpan="3" Grid.RowSpan="3">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F0F8FF" Offset="0"/>
                    <GradientStop Color="#E6F3FF" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Border Grid.Column="1" Grid.Row="1" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="10" 
                Padding="40" 
                Margin="20"
                MaxWidth="500">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" BlurRadius="5" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" 
                       Content="Время заказа:" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,5" 
                       Foreground="#34495E"/>
                <DatePicker Grid.Row="0" 
                            SelectedDate="{Binding OrderTime, Mode=TwoWay}"
                            FontSize="14" 
                            Margin="0,0,0,10" 
                            HorizontalAlignment="Right"/>

                <TextBlock Grid.Row="1" 
                           Text="Позиции заказа:" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10" 
                           Foreground="#2C3E50"/>
                <ListBox Grid.Row="2" 
                         ItemsSource="{Binding OrderItems}" 
                         Height="150" 
                         Margin="0,0,0,20">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding BookId}" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding Quantity, StringFormat='x{0}'}"/>
                                <Button Content="Удалить" 
                                        Click="DeleteItem" 
                                        Width="60" 
                                        Height="25"
                                        Background="#E74C3C" 
                                        Foreground="White" 
                                        BorderThickness="0" 
                                        FontSize="10" 
                                        Margin="10,0,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Grid.Row="3" 
                        Content="Добавить позицию" 
                        Click="AddItem"
                        Width="150" 
                        Height="35"
                        Background="#3498DB" 
                        Foreground="White" 
                        BorderThickness="0" 
                        FontSize="14" 
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20"/>

                <TextBlock Grid.Row="4" 
                           Text="{Binding TotalCost, StringFormat='Общая сумма: {0} руб.'}" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="#27AE60" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Сохранить" 
                            Click="Save"
                            Width="120" 
                            Height="45" 
                            Margin="0,0,15,0"
                            Background="#27AE60" 
                            Foreground="White" 
                            BorderThickness="0" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#229954"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Отмена" 
                            Click="Back"
                            Width="120" 
                            Height="45"
                            Background="#95A5A6" 
                            Foreground="White" 
                            BorderThickness="0" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#7F8C8D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
