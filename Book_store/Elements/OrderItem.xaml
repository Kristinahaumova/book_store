<UserControl x:Class="Book_store.Elements.OrderItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Book_store.Elements">
    <UserControl.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="White" Offset="0"/>
            <GradientStop Color="#F8F9FA" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Background>
    <Border Background="Transparent" 
            BorderBrush="#E0E0E0" 
            BorderThickness="1" 
            CornerRadius="8" 
            Padding="15" 
            Margin="5">
        <Border.Effect>
            <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" BlurRadius="3" Opacity="0.2"/>
        </Border.Effect>
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#E3F2FD"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                       Text="{Binding Book.Name}" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50" 
                       Margin="0,0,0,8" 
                       TextWrapping="Wrap"/>

            <TextBlock Grid.Row="1" 
                       Text="{Binding Book.AuthorName}" 
                       FontSize="14" 
                       FontWeight="SemiBold" 
                       Foreground="#7F8C8D" 
                       Margin="0,0,0,10"/>

            <TextBlock Grid.Row="2" Grid.Column="0"
                       Text="Количество:" 
                       FontSize="14" 
                       Foreground="#34495E" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>
            <WrapPanel Grid.Row="2" Grid.Column="1" 
                       VerticalAlignment="Center"
                       Margin="0,0,0,10">
                <RepeatButton Content="-" 
                             Click="Minus" 
                             Width="25" 
                             Height="25"
                             Background="#95A5A6" 
                             Foreground="White" 
                             BorderThickness="0" 
                             FontSize="14" 
                             FontWeight="Bold" 
                             Cursor="Hand"
                             Margin="0,0,5,0">
                    <RepeatButton.Style>
                        <Style TargetType="RepeatButton">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </RepeatButton.Style>
                </RepeatButton>
                <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                         Width="40" 
                         Height="25"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         BorderBrush="#BDC3C7" 
                         BorderThickness="1" 
                         FontSize="14" 
                         Margin="0,0,5,0"/>
                <RepeatButton Content="+" 
                             Click="Plus" 
                             Width="25" 
                             Height="25"
                             Background="#27AE60" 
                             Foreground="White" 
                             BorderThickness="0" 
                             FontSize="14" 
                             FontWeight="Bold" 
                             Cursor="Hand">
                    <RepeatButton.Style>
                        <Style TargetType="RepeatButton">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </RepeatButton.Style>
                </RepeatButton>
            </WrapPanel>

            <TextBlock Grid.Row="3" Grid.Column="0"
                       Text="{Binding Price, StringFormat='Цена: {0} руб.'}" 
                       FontSize="14" 
                       Foreground="#27AE60" 
                       Margin="0,0,0,10"/>

            <TextBlock Grid.Row="4" Grid.Column="0"
                       Text="{Binding Total, StringFormat='Итого: {0} руб.'}" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Foreground="#27AE60" 
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,0"/>

            <Button Grid.Row="2" Grid.Column="1" Grid.RowSpan="3"
                    Content="Удалить" 
                    Command="{Binding RemoveCommand}" 
                    Width="80" 
                    Height="35"
                    Background="#E74C3C" 
                    Foreground="White" 
                    BorderThickness="0" 
                    FontSize="12" 
                    FontWeight="Bold" 
                    Cursor="Hand"
                    VerticalAlignment="Center"
                    Margin="10,0,0,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C0392B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</UserControl>
